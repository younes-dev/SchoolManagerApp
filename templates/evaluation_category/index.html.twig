{% extends 'baseAdmin.html.twig' %}
{% import 'macros/macros_heading.html.twig' as macros %}

{% block title %}EvaluationCategory index{% endblock %}

{% block body %}
    {% if macros.panel_heading is defined %}
        {{ macros.panel_heading("EvaluationCategory index") }}
    {% endif %}
    <div class="container">
        <table class="table">
            <thead>
            <tr>
                <th>Id</th>
                <th>Type</th>
                <th>actions</th>
            </tr>
            </thead>
            <tbody>
            {% for evaluation_category in evaluation_categories %}
                <tr>
                    <td>{{ evaluation_category.id }}</td>
                    <td>{{ evaluation_category.type }}</td>
                    <td>
                        <a href="{{ path('evaluation_category_show', {'id': evaluation_category.id}) }}">show</a>
                        <a href="{{ path('evaluation_category_edit', {'id': evaluation_category.id}) }}">edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('evaluation_category_new') }}">Create new</a>
    </div>
{% endblock %}
