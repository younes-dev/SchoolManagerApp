{% extends 'baseAdmin.html.twig' %}
{% import 'macros/macros_heading.html.twig' as macros %}

{% block title %}Former{% endblock %}

{% block body %}
    {% if macros.panel_heading is defined %}
        {{ macros.panel_heading("Former") }}
    {% endif %}

<div class="container">
    <h1>Former</h1>

    <table class="table">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ former.id }}</td>
        </tr>
        <tr>
            <th>FirstName</th>
            <td>{{ former.firstName }}</td>
        </tr>
        <tr>
            <th>LastName</th>
            <td>{{ former.lastName }}</td>
        </tr>
        <tr>
            <th>Username</th>
            <td>{{ former.username }}</td>
        </tr>
        <tr>
            <th>Email</th>
            <td>{{ former.email }}</td>
        </tr>
        <tr>
            <th>Password</th>
            <td>{{ former.password }}</td>
        </tr>
        <tr>
            <th>CreatedAt</th>
            <td>{{ former.createdAt ? former.createdAt|date('Y-m-d H:i:s') : '' }}</td>
        </tr>
        <tr>
            <th>UpdatedAt</th>
            <td>{{ former.updatedAt ? former.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
        </tr>
        <tr>
            <th>Roles</th>
            <td>{{ former.roles ? former.roles|json_encode : '' }}</td>
        </tr>
        <tr>
            <th>Address</th>
            <td>{{ former.address }}</td>
        </tr>
        <tr>
            <th>Phone</th>
            <td>{{ former.phone }}</td>
        </tr>
        <tr>
            <th>Cne</th>
            <td>{{ former.cne }}</td>
        </tr>
        <tr>
            <th>City</th>
            <td>{{ former.city }}</td>
        </tr>
        <tr>
            <th>Matricule</th>
            <td>{{ former.matricule }}</td>
        </tr>
        <tr>
            <th>TypeContrat</th>
            <td>{{ former.typeContrat }}</td>
        </tr>
        <tr>
            <th>Grade</th>
            <td>{{ former.grade }}</td>
        </tr>
        </tbody>
    </table>

    <a href="{{ path('former_index') }}">back to list</a>

    <a href="{{ path('former_edit', {'id': former.id}) }}">edit</a>

    {{ include('former/_delete_form.html.twig') }}

</div>
{% endblock %}
