{% extends 'baseAdmin.html.twig' %}
{% import 'macros/macros_heading.html.twig' as macros %}

{% block title %}Evaluation{% endblock %}

{% block body %}
    <h1>Evaluation</h1>
{% if macros.panel_heading is defined %}
    {{ macros.panel_heading(" valuation") }}
{% endif %}
<div class="container">
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ evaluation.id }}</td>
            </tr>
            <tr>
                <th>Note</th>
                <td>{{ evaluation.note }}</td>
            </tr>
            <tr>
                <th>Duration</th>
                <td>{{ evaluation.duration }}</td>
            </tr>
            <tr>
                <th>EvaluationAt</th>
                <td>{{ evaluation.evaluationAt ? evaluation.evaluationAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('evaluation_index') }}">back to list</a>

    <a href="{{ path('evaluation_edit', {'id': evaluation.id}) }}">edit</a>

    {{ include('evaluation/_delete_form.html.twig') }}
    </div>
{% endblock %}
